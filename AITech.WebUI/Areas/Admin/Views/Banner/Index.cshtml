@model List<ResultBannerDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    int count = 0;
}

<h3>Öne Çıkan Alan</h3>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Durum</th>
        <th>İşlemler</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td> <img src="@item.ImageUrl" style="height:75px; width:75px; border-radius:50%" alt="Banner Görseli" /> @item.Title</td>
            <td>@item.Description</td>
            <td>@(item.IsActive ? "Aktif" : "Pasif")</td>
            <td>
                <a href="/Admin/Banner/DeleteBanner/@item.Id" class="btn btn-outline-danger">Sil</a>
                <a href="/Admin/Banner/UpdateBanner/@item.Id" class="btn btn-outline-info">Güncelle</a>
                @if (item.IsActive)
                {
                    <a href="/Admin/Banner/MakePassive/@item.Id" class="btn btn-outline-secondary">Pasif Yap</a>
                }
                else
                {
                    <a href="/Admin/Banner/MakeActive/@item.Id" class="btn btn-outline-success">Aktif Yap</a>
                }
            </td>
        </tr>
    }
</table>
<a href="/Admin/Banner/CreateBanner/" class="btn btn-outline-primary">Yeni Banner Oluştur</a>