@model UpdateProjectDto
@{
    ViewData["Title"] = "UpdateProject";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h3>Proje Güncelle</h3>

<form method="post">
	<input type="hidden" asp-for="Id" />
	<label>Başlık</label>
	<input type="text" asp-for="Title" class="form-control" />
	<br />

	<label>Görsel Url</label>
	<input type="text" asp-for="ImageUrl" class="form-control" />
	<br />

	<label>Kategori</label>
	<select type="text" asp-for="CategoryId" class="form-control" asp-items="@ViewBag.categories"></select>
	<br />

	<button class="btn btn-success">Güncelle</button>
</form>