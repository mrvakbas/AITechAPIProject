@model List<ResultFeatureDto>
<div class="container-fluid bg-light mt-5 py-5">
    <div class="container py-5">
        <div class="row g-5 align-items-center">
            <div class="col-lg-5 wow fadeIn" data-wow-delay="0.1s">
                <div class="btn btn-sm border rounded-pill text-primary px-3 mb-3">Hizmetler</div>
                <h1 class="mb-4">İşiniz İçin Mükemmel Yapay Zekâ Çözümlerimiz</h1>
                <p class="mb-4">
                    “İşinizi modern yapay zekâ çözümleriyle dönüştürüyoruz. Verimliliği artırıyor, süreçleri hızlandırıyor ve rekabette bir adım öne çıkmanızı sağlıyoruz.”
                </p>
                <a class="btn btn-primary rounded-pill px-4" href="">Daha Fazlası</a>
            </div>
            <div class="col-lg-7">
                <div class="row g-4">
                    @foreach (var item in Model)
                    {
                        <div class="col-md-6">
                            <div class="row g-4">
                                <div class="col-12 wow fadeIn" data-wow-delay="0.1s">
                                    <div class="service-item d-flex flex-column justify-content-center text-center rounded">
                                        <div class="service-icon btn-square">
                                            <i class="@item.Icon"></i>
                                        </div>
                                        <h5 class="mb-3">@item.Title</h5>
                                        <p>
                                            @item.Description
                                        </p>
                                        <a class="btn px-3 mt-auto mx-auto" href="">Daha Fazla</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>